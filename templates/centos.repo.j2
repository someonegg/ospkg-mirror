# CentOS-Base.repo
#
# The mirror system uses the connecting IP address of the client and the
# update status of each mirror to pick mirrors that are updated to and
# geographically close to the client. You should use this for CentOS updates
# unless you are manually picking other mirrors.
#
# If the mirrorlist= does not work for you, as a fall back you can try the
# remarked out baseurl= line instead.
#
#

[base]
name=CentOS-$releasever - Base
failovermethod=priority
baseurl={{ ospkg_mirror_url }}/centos/$releasever/os/$basearch/
gpgcheck=1
gpgkey={{ ospkg_mirror_url }}/centos/RPM-GPG-KEY-CentOS-{{ ansible_distribution_major_version }}
#released updates
[updates]
name=CentOS-$releasever - Updates - {{ ospkg_mirror_url }}
failovermethod=priority
baseurl={{ ospkg_mirror_url }}/centos/$releasever/updates/$basearch/
gpgcheck=1
gpgkey={{ ospkg_mirror_url }}/centos/RPM-GPG-KEY-CentOS-{{ ansible_distribution_major_version }}

#additional packages that may be useful
[extras]
name=CentOS-$releasever - Extras - {{ ospkg_mirror_url }}
failovermethod=priority
baseurl={{ ospkg_mirror_url }}/centos/$releasever/extras/$basearch/
gpgcheck=1
gpgkey={{ ospkg_mirror_url }}/centos/RPM-GPG-KEY-CentOS-{{ ansible_distribution_major_version }}

#additional packages that extend functionality of existing packages
[centosplus]
name=CentOS-$releasever - Plus - {{ ospkg_mirror_url }}
failovermethod=priority
baseurl={{ ospkg_mirror_url }}/centos/$releasever/centosplus/$basearch/
gpgcheck=1
enabled=0
gpgkey={{ ospkg_mirror_url }}/centos/RPM-GPG-KEY-CentOS-{{ ansible_distribution_major_version }}

#contrib - packages by Centos Users
[contrib]
name=CentOS-$releasever - Contrib - {{ ospkg_mirror_url }}
failovermethod=priority
baseurl={{ ospkg_mirror_url }}/centos/$releasever/contrib/$basearch/
gpgcheck=1
enabled=0
gpgkey={{ ospkg_mirror_url }}/centos/RPM-GPG-KEY-CentOS-{{ ansible_distribution_major_version }}
